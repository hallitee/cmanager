
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
 <div class="container">    
    <div id="signupbox" style="  margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info" >
            <div class="panel-heading " >
                <div class="panel-title" style="font-size:20px" ><b> Log In </b></div>

            </div>  
              <div class="panel-body" >   
                        <div id="div_id_username" class="form-group required">
                             <%= f.label :email, "Email *", class: "control-label col-md-4", style:"font-size:16px" %>

                            <div class="controls col-md-8 ">
                            <%= f.email_field :email, autofocus: true, class: "input-md emailinput form-control", style: "margin-bottom:20px" %>
                      
                            </div>
                        </div>

                        <div id="div_id_username" class="form-group required">
                             <%= f.label :password, "Password *", class: "control-label col-md-4", style:"font-size:16px" %>

                            <div class="controls col-md-8 ">
                                <%= f.password_field(:password, autocomplete: "off", class: "input-md emailinput form-control", style:"margin-bottom:40px") %>
                                </div>
                        </div>
                          <% if devise_mapping.rememberable? -%>
                        <div id="div_id_username" class="form-group required">
                             <%= f.label :remember_me, class: "control-label col-md-4", style:"font-size:16px" %>

                            <div class="controls col-md-1 ">
                                <%= f.check_box(:remember_me, autocomplete: "off", class: "input-md emailinput form-control", style:"margin-bottom:40px") %>
                                </div>
                        </div>                        
                          <% end -%>

                        <div class="form-group"> 
                            <div class="controls col-md-8 "></div>
                            <div class="controls col-md-4 ">
                               <%= f.submit "Log  in" , class:"btn btn-default", style:"margin-bottom:10px"%>
                         
                               
                            </div>
                                                      
                        </div>                       
                        <div class="form-group"> 
                            <div class="controls col-md-8 ">
                            <%= render "users/shared/links" %>

                            </div>
                            <div class="controls col-md-4 ">                            
                         
                               
                            </div>
                                                      
                        </div>                           
              </div>
        </div>
    </div> 
</div>


<% end %>

