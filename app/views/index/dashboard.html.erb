<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>booking</title>
</head>

<body>
<!--
  <% if notice %>
  <p class="alert alert-success" style="margin-right:10px"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger" style="margin-left:0px"><%= alert %></p>
<% end %>
-->
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                <% if user_signed_in? %>

                <% if @staff.crossplatform %>
                                        <%= collection_select(:@r, :room_id, Room.all, :id, :options_name, {},{class:'input-sm emailinput form-control', style:'margin-bottom: 10px'})%>
                              <% elsif  @staff.location == 'IKOYI' %>
                                          <%= collection_select(:@r, :room_id, Room.where("location='IKOYI'"), :id, :options_name, {},{class:'input-sm emailinput form-control', style:'margin-bottom: 10px'})%>
                              <% else %>
                               <%= collection_select(:@r, :room_id, Room.where("company=?",@staff.company), :id, :options_name, {},{class:'input-sm emailinput form-control', style:'margin-bottom: 10px'})%>
                          <% end %>
                  

                    <div id="calendar"> </div>
                <% else %>
                            <div class="carousel slide" data-ride="carousel" data-wrap="false" id="carousel-1">
                        <div class="carousel-inner" role="listbox">
                            <div class="item active"><%= image_tag 'ConferenceRoom1.jpg' %></div>
                            <div class="item"><%= image_tag 'presenting.jpg' %></div>
                            <div class="item"><%= image_tag 'ConferenceRoom4.jpg' %></div>
                        </div>
                        <div><a class="left carousel-control" href="#carousel-1" role="button" data-slide="prev"><i class="glyphicon glyphicon-chevron-left"></i><span class="sr-only">Previous</span></a><a class="right carousel-control" href="#carousel-1" role="button"
                            data-slide="next"><i class="glyphicon glyphicon-chevron-right"></i><span class="sr-only">Next</span></a></div>
                        <ol class="carousel-indicators">
                            <li data-target="#carousel-1" data-slide-to="0" class="active"></li>
                            <li data-target="#carousel-1" data-slide-to="1"></li>
                            <li data-target="#carousel-1" data-slide-to="2"></li>
                        </ol>
                    </div>
                    <% end %>
                </div>
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="text-center"><i class="glyphicon glyphicon-calendar"></i></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12"><a class="btn btn-default btn-lg btn-block" role="button" href="<%= new_request_url %>">Book Room</a></div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="text-center"><i class="glyphicon glyphicon-eye-open"></i></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                      <!--      <button class="btn btn-default btn-lg btn-block" onclick="myFunc(); return false;" type="button">View Booking</button>  -->
                        
                             <button type="button" class="btn btn-default btn-lg btn-block" data-toggle="modal" data-target="#myModal">View Booking</button>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="text-center"><i class="glyphicon glyphicon-stats"></i></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <button class="btn btn-default btn-block btn-lg" type="button">Status : Available </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>








</body>

</html>