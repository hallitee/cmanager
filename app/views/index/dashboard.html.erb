    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-8">
<% if user_signed_in? %>

                <% if @staff.crossplatform %>
                                        <%= collection_select(:@r, :room_id, Room.all, :id, :options_name, {},{class:'input-sm emailinput form-control', style:'margin-bottom: 10px'})%>
                              <% elsif  @staff.location == 'IKOYI' %>
                                          <%= collection_select(:@r, :room_id, Room.where("location='IKOYI'"), :id, :options_name, {},{class:'input-sm emailinput form-control', style:'margin-bottom: 10px'})%>
                              <% else %>
                               <%= collection_select(:@r, :room_id, Room.where("company=?",@staff.company), :id, :options_name, {},{class:'input-sm emailinput form-control', style:'margin-bottom: 10px'})%>
                          <% end %>
                    <div id="calendar"> </div>
                <% else %>
                  <%= collection_select(:@r, :room_id, Room.all, :id, :options_name, {},{class:'input-sm emailinput form-control', style:'margin-bottom: 10px'})%>            
                <div id="calendar"> </div>

                    <% end %>
                </div>
                <div class="col-md-4">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="text-center"><i class="glyphicon glyphicon-calendar"></i></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12"><a class="btn btn-default btn-lg btn-block" role="button" href="<%= new_request_url %>">Book Room</a></div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="text-center"><i class="glyphicon glyphicon-eye-open"></i></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                      <!--      <button class="btn btn-default btn-lg btn-block" onclick="myFunc(); return false;" type="button">View Booking</button>  -->
                        
                             <button type="button" class="btn btn-default btn-lg btn-block" data-toggle="modal" data-target="#myModal">View Booking</button>

                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="text-center"><i class="glyphicon glyphicon-stats"></i></div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <button class="btn btn-default btn-block btn-lg" type="button">Status : Available </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>








