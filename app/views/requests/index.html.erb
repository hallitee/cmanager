<p id="notice"><%= notice %></p>

<h1>Requests</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Date</th>
      <th>Startd</th>
      <th>Endd</th>
      <th>Desc</th>
      <th>Requestby</th>
      <th>Email</th>
      <th>Reschedule</th>
      <th>Projector</th>
      <th>Refreshment</th>
      <th>Special</th>
      <th>Attendees</th>
      <th>Status</th>
      <th>Approval</th>
      <th>Final</th>
      <th>Remarks</th>
      <th>Staff ID</th>
      <th>Room ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.title %></td>
        <td><%= request.date %></td>
        <td><%= request.startd %></td>
        <td><%= request.endd %></td>
        <td><%= request.desc %></td>
        <td><%= request.requestby %></td>
        <td><%= request.email %></td>
        <td><%= request.reschedule %></td>
        <td><%= request.projector %></td>
        <td><%= request.refreshment %></td>
        <td><%= request.special %></td>
        <td><%= request.attendees %></td>
        <td><%= request.status %></td>
        <td><%= request.approval %></td>
        <td><%= request.final %></td>
        <td><%= request.remarks %></td>
        <td><%= request.staff_id %></td>
        <td><%= request.room_id %></td>        
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
        <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

