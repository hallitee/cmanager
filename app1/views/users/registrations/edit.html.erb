

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
<div class="container">    
    <div id="signupbox" style="  margin-top:10px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">

        <div class="panel panel-info" >
            <div class="panel-heading " >
                <div class="panel-title" style="font-size:20px" ><b> Change Password </b></div>
            </div>  
              <div class="panel-body" >   
                        <div id="div_id_username" class="form-group required">
                             <%= f.label :email, "Email *", class: "control-label col-md-4", style:"font-size:16px" %>

                            <div class="controls col-md-8 ">
                                <% if current_user.admin? || current_user.superadmin? %>
    <%= f.email_field :email, autofocus: true, class: "input-md emailinput form-control", style:"margin-bottom:20px" %>
    <% else %>
    <%= f.email_field :email, autofocus: true, disabled: true, class: "input-md emailinput form-control", style:"margin-bottom:20px" %>
    <% end %>
                      
                            </div>
                        </div>

                        <div id="div_id_username" class="form-group required">
                             <%= f.label :password, "Password *", class: "control-label col-md-4", style:"font-size:16px" %>

                            <div class="controls col-md-8 ">
                                <%= f.password_field(:password, autocomplete: "off", class: "input-md emailinput form-control", style:"margin-bottom:20px") %>
                                    <% if @minimum_password_length %>
        
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
                                </div>
                            
                        </div>


                        <div id="div_id_username" class="form-group required">
                             <%= f.label :password_confirmation, class: "control-label col-md-4", style:"font-size:16px" %>

                            <div class="controls col-md-8">
                                <%= f.password_field(:password_confirmation, autocomplete: "off", class: "input-md emailinput form-control", style:"margin-bottom:20px") %>
                                </div>
                        </div>                        
                        <div id="div_id_username" class="form-group required" >
                             <%= f.label :current_password, class: "control-label col-md-4", style:"font-size:16px" %>

                            <div class="controls col-md-8" style="margin-bottom:20px">
                                <%= f.password_field(:current_password, autocomplete: "off", class: "input-md emailinput form-control", style:"margin-bottom:20px") %>
                                <i>(we need your current password to confirm your changes)</i><br />
                                </div>
                        </div>                         

                        <div id="div_id_username" class="form-group required" style="margin-top:20px" >
                       <div class="controls col-md-8 ">
                              <%= link_to "Back", :back , class:"btn btn-default"%>
                            </div>
                            <div class="controls col-md-4 ">
                               <%= f.submit "Update" , class:"btn btn-default", style:"margin-bottom:10px"%>
                         
                               
                            </div>
                        </div>  
                     
              </div>
        </div>
</div>
</div>
<% end %>



